<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secundario2"
    tools:context=".EmpleadoActivity">

    <ScrollView
        android:layout_width="353dp"
        android:layout_height="604dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="113dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/logo2" />

            <EditText
                android:id="@+id/edtNumEmpleado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:hint="Número de empleado"
                android:inputType="number"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/edtNombreEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Nombre completo"
                android:inputType="text"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/edtCorreoEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Correo eléctronico"
                android:inputType="text"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/edtDireccionEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Dirección"
                android:inputType="text"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/edtTelEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Télefono"
                android:inputType="number"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/edtEdadEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Edad"
                android:inputType="number"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/edtPuestoEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Puesto"
                android:inputType="text"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/edtEstatusEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Estatus"
                android:inputType="text"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnImagen"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/principal"
                android:layout_gravity="center"
                android:text="Tomar foto"
                android:textColor="#FDFDFD"
                android:textSize="20sp"
                app:cornerRadius="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.757" />

            <ImageView
                android:id="@+id/imgEmpleado"
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/user" />

            <Button
                android:id="@+id/btnAgregarEmp"
                android:layout_width="277dp"
                android:layout_height="47dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:backgroundTint="@color/principal"
                android:layout_gravity="center"
                android:text="Agregar"
                android:textColor="#FDFDFD"
                android:textSize="20sp"
                app:cornerRadius="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.757" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>